# The Appearance node specifies the visual properties of geometry
# by defining the Material and texture nodes.
#
# Note: you should use the PBRAppearance node instead of the Appearance node
# for modern simulations with PBR (Physically Based Rendering).

Appearance {
  w3dField SFNode   material         NULL
  w3dField SFNode   texture          NULL
  w3dField SFNode   textureTransform NULL
  field    SFString name             "appearance"
}
