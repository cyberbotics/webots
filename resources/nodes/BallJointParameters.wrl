# The BallJointParamaters node defines the parameters of a BallJoint node.
# parent: JointParameters

BallJointParameters {
  field SFFloat position        0      # current position (rad)
  field SFVec3f anchor          0 0 0  # point at which the bodies are connected (m)
  field SFFloat minStop         0      # low stop position (rad)
  field SFFloat maxStop         0      # high stop position (rad)
  field SFFloat springConstant  0      # uniform rotational spring constant (Nm)
  field SFFloat dampingConstant 0      # uniform rotational damping constant (Nms)
  field SFFloat staticFriction  0      # friction constant (Nms)
}
